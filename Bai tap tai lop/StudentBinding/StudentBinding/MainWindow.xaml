<Window x:Class="StudentBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentBinding"
        mc:Ignorable="d"
        Title="{Binding ID}" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Canvas>
        <TextBox Text="{Binding ID}" FontSize="16" Width="200" Canvas.Left="300" Canvas.Top="80"/>
        <Label Content="{Binding Fullname}" FontSize="16" Width="200" Canvas.Left="300" Canvas.Top="100" />
        <Label Content="{Binding Address}" FontSize="16" Width="200" Canvas.Left="300" Canvas.Top="120"/>
        <Label Content="{Binding Email}" FontSize="16" Width="200" Canvas.Left="300" Canvas.Top="140"/>
        <Label Content="{Binding PhoneNumber}" FontSize="16" Width="200" Canvas.Left="300" Canvas.Top="160"/>
        <Button Content="CHANGE" Click="onChangeButtonClick" Canvas.Left="330" Canvas.Top="276" Height="48" Width="140"/>
    </Canvas>
</Window>
